<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Thème pour version classique -->
    <style name="Theme.LinkCollector.Classic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/button_primary</item>
        <item name="colorPrimaryVariant">@color/background_card</item>
        <item name="colorOnPrimary">@color/background_light</item>

        <item name="colorSecondary">@color/button_secondary</item>
        <item name="colorSecondaryVariant">@color/background_light</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/input_background</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <item name="android:statusBarColor">@color/button_primary</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Thème Material Design modernisé -->
    <style name="Theme.LinkCollector.Material" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/button_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/button_secondary</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/input_background</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <item name="android:statusBarColor">@color/button_primary</item>
        <item name="android:windowBackground">@color/background_light</item>

        <!-- styles par défaut customisés -->
        <item name="materialButtonStyle">@style/Widget.MyMaterialButton</item>
        <item name="cardViewStyle">@style/Widget.MyMaterialCard</item>
    </style>

</resources>
